<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Firm</th>
      <th>Color</th>
      <th>Model</th>
      <th>Cost</th>
      <th>Branch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.type %></td>
        <td><%= item.firm %></td>
        <td><%= item.color %></td>
        <td><%= item.model %></td>
        <td><%= item.cost %></td>
        <td><%= item.branch %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

