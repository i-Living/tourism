<p id="notice"><%= notice %></p>

<h1>Listing Equipment</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Firm</th>
      <th>Color</th>
      <th>Model</th>
      <th>Cost</th>
      <th>Branch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.type %></td>
        <td><%= equipment.firm %></td>
        <td><%= equipment.color %></td>
        <td><%= equipment.model %></td>
        <td><%= equipment.cost %></td>
        <td><%= equipment.branch %></td>
        <td><%= link_to 'Show', equipment %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

